<UserControl
    x:Class="Coex.AppLab.Components.WindowsStore.Controls.FakeProgressDialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Coex.AppLab.Components.WindowsStore.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="800"
     DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid VerticalAlignment="Center" Background="White" MinHeight="150">

        <StackPanel Margin="20">
            <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" Style="{StaticResource SubheaderTextBlockStyle}"/>
            <ProgressRing  VerticalAlignment="Center" HorizontalAlignment="Center" Width="25" Height="25" IsActive="True" Margin="0,12,0,0" Foreground="#FF17B44B" />
        </StackPanel>
        
    </Grid>
</UserControl>
